{
    "name": "Garoon Next Meeting",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "ガルーンの次の予定を表示します",
    "icons": {
        "16": "icons/Artboard@2x.png",
        "48": "icons/Artboard@2x.png",
        "128": "icons/Artboard@2x.png"
    },
    "permissions": [
        "https://bozuman.cybozu.com/*",
        "https://bozuman.s.cybozu.com/*"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    },
    "browser_action": {
        "default_title": "garoon-next-meeting",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js; object-src 'self'",
    "author": "niwatonmaster"
}

